{
  "name": "nodejs-production-test-action",
  "version": "1.0.3",
  "description": "Catches publishing problems",
  "main": "dist/index.js",
  "scripts": {
    "test": "tsc",
    "prepare": "ncc build index.js --quiet --license=licenses.txt --source-map",
    "production-test": "node dist/index.js",
    "pre-commit": "lint-staged",
    "preversion": "npm run prepare && git add -A dist"
  },
  "keywords": [],
  "author": "Christopher Hiller <boneskull@boneskull.com>",
  "license": "Apache-2.0",
  "files": [
    "dist",
    "index.js",
    "action.yml"
  ],
  "lint-staged": {
    "*.{js,yml,json,md}": "prettier --write"
  },
  "dependencies": {
    "@actions/core": "^1.8.2",
    "@actions/exec": "^1.1.1",
    "@actions/io": "^1.1.2",
    "log-symbols": "^4.1.0",
    "pluralize": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^16.11.38",
    "@types/pluralize": "^0.0.29",
    "@vercel/ncc": "^0.34.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.0",
    "prettier": "^2.6.2",
    "typescript": "^4.7.3"
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": false
  }
}
